<div class="container text-center mt-5">
  <div class="row justify-content-center align-items-center">
    <div class="card mt-1" style="width: 400px; white-space: nowrap">
      {{#each user.photos}}<img src="{{ value }}" class="card-img-top" alt="...">{{/each}}
      <div class="card-body">
        <h5 class="card-title">{{ user.displayName }}</h5>
        <p class="card-text">Email: {{#each user.emails}} {{ value }} {{/each}}</p>
      </div>
    
      <div class="card-footer">
        <small class="text-muted">ID: {{ user.id }}</small>
      </div>
    </div>
  </div>
</div>